<%# unless current_user == user %>
  <% if current_user.fav?(task) %>
    <%= form_for(current_user.favorites.find_by(task_id: task.id), html: { method: :delete }) do |f| %>
      <%= hidden_field_tag :task_id, task.id %>
      <%= f.submit 'unfav', class: 'btn btn-danger btn-block' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.favorites.build) do |f| %>
      <%= hidden_field_tag :task_id, task.id %>
      <%= f.submit 'fav', class: 'btn btn-primary btn-block' %>
    <% end %>
  <% end %>
<%# end %>