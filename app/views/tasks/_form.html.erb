<div class="row">
  <div class="col-xs-12 col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6">

<%= form_for(task) do |f| %>

  <% if task.errors.any? %>
    <div class="alert alert-warning">
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this message from being saved:</h2>
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :content, 'タスク' %>
    <%= f.text_field :content, class: 'form-control' %>
  </div>  
  <div class="form-group">
    <%= f.label :status, '状態' %>
    <%= f.select :status, {initial: 'initial',progress: 'progress', finised: 'finised'}, class: 'form-control' %>
  </div>
  <%= f.submit '追加', class: 'btn btn-primary' %>
<% end %>

    
  </div>
</div>